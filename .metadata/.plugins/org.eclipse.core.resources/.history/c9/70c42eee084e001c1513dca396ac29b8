<title>teht‰v‰4</title>
</head>
<body>
<table id="listaus">
	<thead>
		<tr>
			<th colspan="6" class="oikealle"><span id="uusiAsiakas">Lis‰‰ asiakas</span></th>
		</tr>
		<tr>
			<th colspan="3">Hakusana:</th>
			<th colspan="2"><input type="text" id="hakusana"></th>
			<th><input type="button" value="HAE" id="hakunappi"></th>
		</tr>
		<tr>
			<th>Asiakasnumero</th>
			<th>Etunimi</th>
			<th>Sukunimi</th>
			<th>Puhelin</th>
			<th>Sposti</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
<script>
$(document).ready(function(){
	
	$("#uusiAsiakas").click(function(){
		document.location="lisaaasiakas.jsp";
	})
	
	haeAsiakkaat();
	
	$("#hakunappi").click(function(){
		haeAsiakkaat();
	});
	
	$(document.body).on("keydown", function(event){
		if(event.which==13){
			haeAsiakkaat();
		}
	});
	
	$("#hakusana").focus();
	
	
function haeAsiakkaat(){	
	$("#listaus tbody").empty();
	$.ajax({url:"asiakkaat/"+$("#hakusana").val(), 
		type:"GET", 
		dataType:"json", 
		success:function(result){//Funktio palauttaa tiedot json-objektina		
			$.each(result.asiakkaat, function(i, field){  
	        	var htmlStr;
	        	htmlStr+="<tr>";
	        	htmlStr+="<td>"+field.asiakasID+"</td>";
	        	htmlStr+="<td>"+field.etunimi+"</td>";
	        	htmlStr+="<td>"+field.sukunimi+"</td>";
	        	htmlStr+="<td>"+field.puhelin+"</td>";  
	        	htmlStr+="<td>"+field.sposti+"</td>";
	        	htmlStr+="</tr>";
	        	$("#listaus tbody").append(htmlStr);
	        });
		}
	});
};

})
</script>
</body>
</html>